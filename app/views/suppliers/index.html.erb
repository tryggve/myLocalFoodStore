<% content_for :header do %>
	<h1>All Suppliers</h1>
<% end %>

<% if @suppliers.any? %>
	<% @suppliers.each do |s| %>	
		<p class="listItem"><strong><%= link_to "#{s.name}", supplier_path(s)%></strong>
		<span class="right"><%= link_to "Edit", edit_supplier_path(s)%></span><br/>
		<span class="right"><%= link_to "Delete", { :action => "destroy", :id => s.id }, :confirm => "Do you want to delete \"#{s.name}\"", :method => :delete %></span>
		<br/>
		</p>
	<% end %>
<% else %>
	<p>There are currently no suppliers in the system</p>
<% end %>
